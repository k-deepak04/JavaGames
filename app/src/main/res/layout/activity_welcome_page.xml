<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomePage">
    <ImageView
        android:foreground="@drawable/foreground_design"
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/home1"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/game1"
        android:layout_margin="10dp"
        android:layout_width="190dp"
        android:layout_height="300dp"
        android:src="@drawable/tictac"
        android:onClick="tictactoe"

        tools:ignore="MissingConstraints" />
    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/game2"
        android:layout_width="190dp"
        android:layout_height="300dp"
        android:src="@drawable/word"
        android:onClick="wordgame"
        app:layout_constraintLeft_toRightOf="@+id/game1"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/game3"
        android:layout_width="190dp"
        android:layout_height="280dp"
        android:src="@drawable/bird1"
        android:onClick="Flyhigh"
        app:layout_constraintTop_toBottomOf="@+id/game1"
        tools:ignore="MissingConstraints" />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:text="@string/know_the_benefits_of_game"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:onClick="web"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game3"
        app:layout_constraintWidth_percent=".8"
        app:layout_constraintVertical_bias=".7"
        android:background="@drawable/btn_bck"
        />
</androidx.constraintlayout.widget.ConstraintLayout>